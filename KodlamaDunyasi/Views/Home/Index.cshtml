@model IEnumerable<KodlamaDunyasi.Models.Urun>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<!-- Bootstrap CSS Bağlantısı -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Özel CSS ile Tasarımı Geliştirme -->
<style>
    /* Kart Hover Efekti */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

    /* Fiyat, Stok ve Kategori Renk Vurgulama */
    .card-title {
        color: #343a40; /* Koyu renk başlık */
    }

    .card-text {
        color: #6c757d; /* Gri renk açıklama */
    }

    .list-group-item {
        background-color: #f8f9fa; /* Açık gri arka plan */
    }

        .list-group-item strong {
            color: #495057; /* Koyu metin rengi */
        }

    .btn-warning {
        background-color: #ff9900;
        border-color: #ff9900;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    /* Hover buton efektleri */
    .btn:hover {
        opacity: 0.9;
    }
</style>

<div class="container py-4">
    <h2 class="text-center mb-4 text-primary fw-bold">Ürün Listesi</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Yeni Ürün Ekle</a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title text-dark fw-bold">@item.Ad</h5>
                        <p class="card-text">@item.Aciklama</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Fiyat:</strong> <span class="text-success">@item.Fiyat.ToString("C2")</span></li>
                            <li class="list-group-item"><strong>Stok:</strong> <span class="text-danger">@item.Stok</span></li>
                            <li class="list-group-item"><strong>Kategori:</strong> <span class="text-primary">@item.KategoriID</span></li>
                            <li class="list-group-item"><strong>Satıcı:</strong> @item.SaticiID</li>
                        </ul>
                    </div>
                    <div class="card-footer bg-transparent text-center">
                        <a asp-action="Edit" asp-route-id="@item.UrunID" class="btn btn-warning btn-sm me-1">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.UrunID" class="btn btn-info btn-sm me-1 text-white">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.UrunID" class="btn btn-danger btn-sm" onclick="return confirm('Emin misiniz?')">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>